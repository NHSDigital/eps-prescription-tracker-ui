{
  "extends": "../../tsconfig.defaults.json",
  "include": [
    "src/**/*",
    "tests/**/*",
    "tests/**/*.json",
    "**/*.tsx",
    "vite-env.d.ts",
    "jest.config.ts",
    "jest.setup.ts",
    "global.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "preserve",
    "composite": false,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "allowImportingTsExtensions": true
  },
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../common/commonTypes"
    }
  ]
}
