{
  "extends": "../../tsconfig.defaults.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "types": ["jest", "node", "@testing-library/jest-dom", "vite/client"],
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "isolatedModules": true,
    "composite": false
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "**/*.tsx",
    "jest.config.ts",
    "jest.setup.ts",
    "vite.config.ts",
    "vite-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
