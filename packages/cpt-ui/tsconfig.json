{
  "extends": "../../tsconfig.defaults.json",
  "references": [],
  "include": [
    "src/**/*",
    "tests/**/*",
    "tests/**/*.json",
    ".next/types/**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/context/*": ["context/*"],
      "@/constants/*": ["constants/*"],
      "@/assets/*": ["assets/*"],
      "@/components/*": ["components/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "composite": false
  },
  "exclude": [
    "node_modules",
    ".next"
  ]
}
