{
  "extends": "../../tsconfig.defaults.json",
  "references": [],
  "include": [
    "src/**/*",
    "tests/**/*",
    "tests/**/*.json",
    ".next/types/**/*.ts",
    "**/*.tsx",
    "vite-env.d.ts",
    "jest.config.ts",
    "jest.setup.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "composite": false
  },
  "exclude": ["node_modules", ".next"]
}
