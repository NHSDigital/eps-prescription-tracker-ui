{
  "extends": "../../tsconfig.defaults.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "lib",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "references": [],
  "include": [
    "src/**/*",
    "app/**/*",
    "components/**/*",
    "utils/**/*",
    "tests/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
